<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.addApptController">
    <children>

        <Label alignment="CENTER" layoutY="14.0" text="Add Appointment" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <font>
                <Font name="JetBrains Mono Medium" size="24.0" />
            </font>
        </Label>

    <Separator layoutY="47.0" AnchorPane.leftAnchor="3.0" AnchorPane.rightAnchor="3.0" />

        <VBox alignment="CENTER" layoutX="25.0" layoutY="66.0" prefHeight="500.0" prefWidth="500.0" AnchorPane.topAnchor="65.0">
            <children>
                <GridPane alignment="CENTER" hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" minWidth="100" prefWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="250" />
                        <ColumnConstraints minWidth="50" prefWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="100" />
                    </columnConstraints>


                    <Label text="Appointment ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="apptIDTextField" disable="true" editable="false" promptText="Auto-generated" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Title" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="titleTextField" promptText="Appointment Title" GridPane.columnIndex="1" GridPane.rowIndex="1" />


                    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="descriptionTextField" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Location" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="locationTextField" promptText="Location" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Contact" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <ComboBox fx:id="contactComboBox" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Type" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="typeTextField" promptText="Appointment Type" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Start Date/Time" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
                        <DatePicker fx:id="startDatePicker" prefWidth="150" />
                        <ComboBox fx:id="startTimeComboBox" prefWidth="90" />
                    </HBox>


                    <Label text="End Date/Time" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
                        <DatePicker fx:id="endDatePicker" prefWidth="150" />
                        <ComboBox fx:id="endTimeComboBox" prefWidth="90" />
                    </HBox>


                    <Label text="Customer" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="8">
                        <TextField fx:id="customerSearchField" promptText="Search Customer" />
                        <ComboBox fx:id="customerComboBox" prefWidth="250" />
                    </VBox>


                    <Label text="User ID" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                    <TextField fx:id="userIDTextField" promptText="User ID" GridPane.columnIndex="1" GridPane.rowIndex="9" />


                    <HBox alignment="CENTER" spacing="20.0" GridPane.columnSpan="3" GridPane.rowIndex="10">
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onClickSaveAppt" prefHeight="25.0" prefWidth="80.0" text="Save">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onClickCancelAppt" prefHeight="25.0" prefWidth="80.0" text="Cancel" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onClickGoBack" prefHeight="25.0" prefWidth="80.0" text="Back" />
                  <padding>
                     <Insets top="12.0" />
                  </padding>
                    </HBox>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

                </GridPane>
            </children>
            <padding>
                <Insets top="5.0" />
            </padding>
        </VBox>

    </children>
</AnchorPane>
